<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.honnalmanja.javamvvmpractice">

    <application
        android:name=".TaskManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.user.SignUpActivity"
            android:parentActivityName=".view.user.LoginActivity"/>
        <activity
            android:name=".view.user.LoginActivity"
            android:parentActivityName=".view.task.TaskActivity" />
        <activity android:name=".view.task.TaskActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>